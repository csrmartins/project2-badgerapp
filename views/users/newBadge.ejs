<!DOCTYPE html>
<html>
    <head>
        <title>Create New Badge</title>
    </head>
    <body>
        <header>
            <section>
                <a href="/users/<%=user._id%>">Profile</a>
                <a href="/users/">Swipe</a>
                <a href="/users/message">Message</a>
            </section>
        </header>
        <main>

            <section>
                <h3>Events</h3>
                <form action="/users/<%=user._id%>" method="POST">
                    <h2>Enter Badge Title</h2>
                    <select id="badges" name="title">
                        <%for (let i = 0; i < badgeTitles.length; i++) { %>
                            <option value="<%=badgeTitles[i]%>"><%=badgeTitles[i]%></option>
                        <% } %>
                        </select>

                    <h4>First</h4>

                    Image:        <input type="url" name="img1" placeholder="img"><br/>
                    Description:  <textarea name="description1"></textarea><br/>
              
                    <h4>Second</h4>
                    Image:        <input type="url" name="img2" placeholder="img"><br/>
                    Description:  <textarea name="description2"></textarea><br/>
                
                    <h4>Third</h4>
                    Image:        <input type="url" name="img3" placeholder="img"><br/>
                    Description:  <textarea name="description3"></textarea><br/>

                    <button type="submit">Submit</button>
                </form>
            </section>
        </main>
        <footer>
            <nav>
                <ul>
                    <li>Copyright</li>
                    <li>Contacts</li>
                    <li>Rules</li>
                    <li>Jobs</li>
                </ul>
            </nav>
        </footer>
    </body>
</html>
